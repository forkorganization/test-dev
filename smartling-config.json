{
    "locales" : [
        {
            "smartling"   : "de-DE",
            "application" : "de"
        },
        {
            "smartling"   : "es",
            "application" : "es-rES"
        },
        {
            "smartling"   : "ru-RU",
            "application" : "ru"
        }
    ],
    "resourceSets": [
        {
            "pathRegex"                 : "(?<path>android\\.companyname\\.driver\\/app\\/src\\/main\\/res\\/)values\\/strings.xml",
            "translationPathExpression" : "${path}values-${locale}/${originalFile.name}",
            "type"                      : "xml",
            "smartlingDirectives"       : [
                 "smartling.translate_paths = resources/string",
                 "smartling.placeholder_format = JAVA"
            ]
        }
    ]
}
