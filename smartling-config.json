{
  "locales": [
    {
      "smartling": "zh-CN",
      "application": "zh_cn"
    },
    {
      "smartling": "nl-NL",
      "application": "nl"
    }
  ],
  "resourceSets": [
    {
      "pathRegex": ".*src.*_lang\\.json",
      "translationPathExpression": "/translated/${originalFile.baseName}_${locale}.${originalFile.extension}",
      "translationCommitMessage": "Translate ${originalFile.name} to ${locale}\n${translatedFile.fullName}",
      "type": "json",
      "authorizeContent": true,
      "smartlingDirectives"       : [
                 "smartling.placeholder_format_custom = (%([0-9][$])*s)|(\\%\\{[^\\}\\{]+?\\})|(##[^#]+?##)|(__[^_]+?__)|(\\$\\{[^\\}\\{]+?\\})|(\\{\\{[^\\}\\{]+?\\}\\})|((?<!\\{)\\{[^\\}\\{]+?\\}(?!\\}))"
            ],
    }
  ]
}
